@page
@model ColorChangeModel
@{
    ViewData["Title"] = "ColorChange";
}

<form method="post">
    <label asp-for="Color">Select an option:</label>
    <select asp-for="Color" asp-items="Model.Options" class="form-control">
        <option value="">Select...</option>
    </select>
    
    <!-- Other form fields -->
    <input type="hidden" name="GameIdReal" value="@Model.GameIdReal" />
    <input type="hidden" name="CardIndexSaved" value="@Model.CardIndexSaved" />
    <input type="hidden" name="PickCardSaved" value="@Model.PickCardSaved" />
    <input type="hidden" name="PlayerNameSaved" value="@Model.PlayerNameSaved" />
    <!-- Other form fields -->
    
    <button type="submit" class="inline-flex border border-pink-500 focus:outline-none focus:ring-2 hover:bg-pink-700 focus:ring-pink-500 focus:ring-offset-2 text-white justify-center rounded-md py-4
                                     px-6 bg-pink-600 text-lg font-semibold shadow-sm tracking-normal">Choose</button>
</form>